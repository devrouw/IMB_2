<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/yellow_500">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/txt_contoh"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:fontFamily="@font/allerbd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="14dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:padding="16dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_imb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_imb"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:background="@drawable/ic_down_arrow"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/allerrg"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    android:text="Izin Mendirikan Bangunan"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_surat_kuasa"
                android:layout_below="@id/ll_imb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_surat_imb"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:background="@drawable/ic_down_arrow"/>

                <TextView
                    android:id="@+id/tv_syarat_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/iv_surat_imb"
                    android:fontFamily="@font/allerrg"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    android:text="Surat Kuasa IMB"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_jaminan_konstruksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_below="@id/ll_surat_kuasa"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_jaminan_konstruksi"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:background="@drawable/ic_down_arrow"/>

                <TextView
                    android:id="@+id/tv_syarat_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/allerrg"
                    android:layout_marginStart="10dp"
                    android:textSize="12sp"
                    android:text="Surat Pernyataan Jaminan Konstruksi Konsultan"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_penanaman_pohon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_below="@id/ll_jaminan_konstruksi"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_surat_penanaman"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:background="@drawable/ic_down_arrow"/>

                <TextView
                    android:id="@+id/tv_syarat_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/allerrg"
                    android:layout_marginStart="10dp"
                    android:textSize="12sp"
                    android:text="Surat Pernyataan Penanaman Pohon"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_surat_kuasa_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_below="@id/ll_penanaman_pohon"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_surat_kuasa"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="@string/txt_four"
                    android:gravity="center"
                    android:background="@drawable/ic_down_arrow"/>

                <TextView
                    android:id="@+id/tv_syarat_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/allerrg"
                    android:layout_marginStart="10dp"
                    android:textSize="12sp"
                    android:text="Surat Kuasa Mengatasnamakan IMB"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_jaminan_pemilik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_below="@id/ll_surat_kuasa_2"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_jaminan_pemilik"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="@string/txt_four"
                    android:gravity="center"
                    android:background="@drawable/ic_down_arrow"/>

                <TextView
                    android:id="@+id/tv_syarat_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/allerrg"
                    android:layout_marginStart="10dp"
                    android:textSize="12sp"
                    android:text="Surat Pernyataan Jaminan Konstruksi Pemilik"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_below="@id/ll_jaminan_pemilik"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_menjaga_turap"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="@string/txt_four"
                    android:gravity="center"
                    android:background="@drawable/ic_down_arrow"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/allerrg"
                    android:layout_marginStart="10dp"
                    android:textSize="12sp"
                    android:text="Surat Pernyataan Jaminan Konstruksi Pemilik"/>
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>