<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/utama_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true"
    android:background="@color/yellow_500">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="4dp"
            card_view:cardUseCompatPadding="false"
            card_view:elevation="5dp">

            <LinearLayout
                android:id="@+id/lay_purpose_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtDeskripsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Data Pemilik Bangunan"
                    android:textColor="@color/black_200"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="28dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text="Memiliki NIB?*"
                        android:layout_weight="7"
                        android:textColor="@color/black_200"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/et_nib"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingHorizontal="10dp"
                        android:entries="@array/txt_imb"
                        android:background="@drawable/bg_edittext_yellow"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="30dp"
                        android:text="Bentuk Kepemilikan*"
                        android:layout_weight="7"
                        android:textColor="@color/black_200"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/et_kepemilikan"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingHorizontal="10dp"
                        android:entries="@array/txt_kepemilikan"
                        android:background="@drawable/bg_edittext_yellow"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="30dp"
                        android:text="Nama Pemilik/Perusahaan"
                        android:layout_weight="7"
                        android:textColor="@color/black_200"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_nama_pemilik"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingHorizontal="10dp"
                        android:background="@drawable/bg_edittext_yellow"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="30dp"
                        android:text="Alamat Pemilik/Perusahaan*"
                        android:layout_weight="7"
                        android:textColor="@color/black_200"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_alamat"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingHorizontal="10dp"
                        android:background="@drawable/bg_edittext_yellow"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="30dp"
                        android:text="Nomor Telp/HP*"
                        android:layout_weight="7"
                        android:textColor="@color/black_200"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_notelp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingHorizontal="10dp"
                        android:inputType="numberDecimal"
                        android:background="@drawable/bg_edittext_yellow"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="30dp"
                        android:text="Alamat Email"
                        android:layout_weight="7"
                        android:textColor="@color/black_200"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingHorizontal="10dp"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/bg_edittext_yellow"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="30dp"
                        android:text="Nomor Identitas*"
                        android:layout_weight="7"
                        android:textColor="@color/black_200"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_no_identitas"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:inputType="numberDecimal"
                        android:paddingHorizontal="10dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/bg_edittext_yellow"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>