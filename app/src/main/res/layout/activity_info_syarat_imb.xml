<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/yellow_500">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/txt_syarat_imb"
        android:layout_marginTop="60dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="28sp"
        android:fontFamily="@font/allerbd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardCornerRadius="14dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:padding="16dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_one"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="@string/txt_one"
                android:fontFamily="@font/allerrg"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/bg_rounded_yellow"/>

            <TextView
                android:id="@+id/tv_syarat_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_one"
                android:fontFamily="@font/allerrg"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:text="@string/txt_scan_ktp"/>

            <TextView
                android:id="@+id/tv_two"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="@string/txt_two"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:fontFamily="@font/allerrg"
                android:gravity="center"
                android:layout_below="@id/tv_one"
                android:background="@drawable/bg_rounded_yellow"/>

            <TextView
                android:id="@+id/tv_syarat_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_two"
                android:fontFamily="@font/allerrg"
                android:layout_marginTop="28dp"
                android:layout_marginStart="10dp"
                android:layout_below="@id/tv_syarat_1"
                android:text="@string/txt_scan_pbb"/>

            <TextView
                android:id="@+id/tv_three"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="@string/txt_three"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/allerrg"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_below="@id/tv_two"
                android:background="@drawable/bg_rounded_yellow"/>

            <TextView
                android:id="@+id/tv_syarat_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_four"
                android:fontFamily="@font/allerrg"
                android:layout_below="@id/tv_syarat_2"
                android:layout_marginTop="28dp"
                android:layout_marginStart="10dp"
                android:text="@string/txt_scan_kajian"/>

            <TextView
                android:id="@+id/tv_four"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="@string/txt_four"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/allerrg"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_below="@id/tv_three"
                android:background="@drawable/bg_rounded_yellow"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_four"
                android:fontFamily="@font/allerrg"
                android:layout_below="@id/tv_syarat_3"
                android:layout_marginTop="28dp"
                android:layout_marginStart="10dp"
                android:text="@string/txt_perhitungan_struktur"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>